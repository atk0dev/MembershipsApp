@model Memberships.Models.ThumbnailAreaModel

<div class="row">

    @if (!Model.Title.Equals(string.Empty))
    {
        <div class="headline">
            <h3>@Model.Title</h3>
        </div>
    }
    
    @if (Model.Thumbnails != null)
    {
        foreach (var t in Model.Thumbnails)
        {
            <div class="col-sm-3">
                <div class="thumbnail">
                    <div class="thumbnail-container">
                        <div class="thumbnail-image-container">
                            <img class="thumbnail-image" src="@t.ImageUrl" alt="@t.Title" />
                        </div>
                        <a class="tag text-tag hover-effect" href="@t.Link">
                            @t.TagText
                        </a>
                        <div class="tag content-tag">@t.ContentTag</div>
                    </div>
                    <div class="caption">
                        <h3><a href="@t.Link">@t.Title</a></h3>
                        <p>@t.Description</p>
                    </div>
                </div>
            </div>
        }
    }

</div>
